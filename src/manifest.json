{
	"manifest_version": 2,
	"name": "Cryptsy orders notifier",
	"description": "Notify abount changes in orders on Cryptsy",
	"version": "1.0",
	"options_page": "options/options.html",
	
	"background": 
	{
		"page": "background/background.html"
	},  
	
	"permissions": 
	[
		"storage",
		"notifications",
		"https://api.cryptsy.com/api"
	],
	
	"browser_action": 
	{
		"default_icon": "icon.png",
		"default_popup": "options/options.html"
	}
}
